<Page
    x:Class="TraeToDo.TaskListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TraeToDo.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Tasks" 
                   Grid.Row="0"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="24,12,24,12"/>

        <!-- Status Bar (top, unified style) -->
        <TextBlock x:Name="StatusBar"
                   Grid.Row="1"
                   Margin="24,0,24,6"
                   Foreground="Green"
                   Visibility="Collapsed"
                   TextWrapping="WrapWholeWords"
                   FontSize="14"/>

        <!-- Task List -->
        <ListView x:Name="TaskListView"
                  Grid.Row="2"
                  ItemsSource="{x:Bind FilteredTasks}"
                  SelectionMode="Single"
                  Margin="12,0,12,12">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="local:TaskItem">
                    <StackPanel Margin="0,4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox IsChecked="{x:Bind IsCompleted, Mode=TwoWay}"
                                      VerticalAlignment="Center"
                                      Checked="CheckBox_Checked"
                                      Unchecked="CheckBox_Unchecked"/>
                            <TextBlock Text="{x:Bind Description}"
                                       Grid.Column="1"
                                       VerticalAlignment="Center"
                                       Margin="12,0,12,0"
                                       TextWrapping="Wrap"
                                       TextTrimming="CharacterEllipsis"/>
                            <TextBlock Text="{x:Bind FormattedCreatedAt}"
                                       Grid.Column="2"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       VerticalAlignment="Center"
                                       Foreground="Gray"/>
                        </Grid>
                        <!-- Subtasks checklist (flat, styled) -->
                        <ItemsControl ItemsSource="{x:Bind Subtasks}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="local:SubTaskItem">
                                    <StackPanel Orientation="Horizontal" Margin="32,2,0,2">
                                        <CheckBox IsChecked="{x:Bind IsCompleted, Mode=TwoWay}"/>
                                        <TextBlock Text="{x:Bind Description}" Margin="8,0,0,0" TextWrapping="Wrap"
                                                   FontSize="13" Foreground="Gray"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Add Task -->
        <Grid Grid.Row="2" 
              Padding="12"
              Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBox x:Name="TaskInputBox" 
                     Grid.Column="0"
                     PlaceholderText="Add a new task..."
                     Height="40"
                     KeyDown="TaskInputBox_KeyDown"/>
            
            <Button x:Name="AddTaskButton" 
                    Grid.Column="1" 
                    Content="Add" 
                    Margin="8,0,0,0"
                    Click="AddTaskButton_Click"/>
        </Grid>
    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Message" Label="AI Chat" Click="AIChatButton_Click" />
            <AppBarButton Icon="Setting" Label="Settings" Click="SettingsButton_Click" />
        </CommandBar>
    </Page.BottomAppBar>
</Page>
