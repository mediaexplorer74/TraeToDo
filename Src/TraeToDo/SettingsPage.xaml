<Page
    x:Class="TraeToDo.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TraeToDo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
      <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <Button x:Name="BackButton" Click="BackButton_Click" Style="{StaticResource NavigationBackButtonNormalStyle}"/>
            
            <TextBlock Text="Settings" Style="{StaticResource HeaderTextBlockStyle}" Margin="0,12,0,0"/>
        </StackPanel>

        <!-- Status Bar (top, unified style) -->
        <TextBlock x:Name="StatusTextBlock"
                   Grid.Row="1"
                   Margin="24,0,24,6"
                   Foreground="Green"
                   Visibility="Collapsed"
                   TextWrapping="WrapWholeWords"
                   FontSize="14"/>

        <!-- AI Settings Section -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <!-- Start Page Selector -->
            <StackPanel Margin="24,0,24,0">
                <ToggleSwitch x:Name="HideCompletedTasksToggle"
                              Header="Hide completed tasks"
                              OffContent="OFF (Show all tasks)"
                              OnContent="ON (Hide completed)"
                              Margin="0,16,0,0"
                              Toggled="HideCompletedTasksToggle_Toggled"/>
                <TextBlock Text="Start Page" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,8"/>
                <ComboBox x:Name="StartPageComboBox" 
                         Header="Select the page to show on startup"
                         Margin="0,0,0,12"
                         Width="300"
                         HorizontalAlignment="Left">
                    <ComboBoxItem Content="AI Chat" Tag="AIChat"/>
                    <ComboBoxItem Content="Task List" Tag="TaskList"/>
                </ComboBox>
            </StackPanel>
            
            <!-- SOLO Mode Toggle -->
            <ToggleSwitch x:Name="SoloModeToggle" Header="SOLO Mode" 
                         OffContent="Disabled" OnContent="Enabled" 
                         Margin="0,0,0,12"/>
                          
            <!-- Interval Setting -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <TextBlock Text="Interval (minutes):" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox x:Name="IntervalTextBox" Width="60" Text="5" InputScope="Number"/>
            </StackPanel>

            <!--Style="{StaticResource SubtitleTextBlockStyle}"-->
                <TextBlock Text="OpenRouter deepseek-r1:free API Key" Margin="0,0,0,8"/>
            <!--TextBlock Text="Enter your OpenRouter API key to use the DeepSeek model. You can get an API key from openrouter.ai" 
                       TextWrapping="Wrap" Margin="0,0,0,12"/-->
            
            <PasswordBox x:Name="ApiKeyPasswordBox" PlaceholderText="Enter your API key" Width="400" 
                         HorizontalAlignment="Left" Margin="0,0,0,12"/>
            
            <Button x:Name="SaveButton" Content="Save settings" Click="SaveButton_Click"
                    Background="#0078D7" Foreground="White" Margin="0,0,0,12"/>
            
      
            <Button x:Name="ClearChatButton" Content="Clear Chat" Click="ClearChatButton_Click"
                    Margin="0,0,0,12" HorizontalAlignment="Left"/>

            <Button x:Name="ClearTasksButton" Content="Clear Tasks" Click="ClearTasksButton_Click"
                    Margin="0,0,0,12" HorizontalAlignment="Left"/>        

        </StackPanel>

        <!--TextBlock Text="About" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,8"/>
  <TextBlock TextWrapping="Wrap">
      <Run>TraeToDo is a simple chat application that uses the DeepSeek AI model via OpenRouter.</Run>
      <LineBreak/>
      <LineBreak/>
      <Run>Version 1.0.50</Run>
  </TextBlock-->
    </Grid>
   </ScrollViewer>
</Page>