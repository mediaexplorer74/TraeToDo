<Page
    x:Class="TraeToDo.AIChatPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:models="using:TraeToDo.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with SOLO indicator -->
        <Grid Grid.Row="0" Margin="24,12,24,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Chat"
                       Style="{StaticResource TitleTextBlockStyle}"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <FontIcon x:Name="SoloIndicatorIcon" 
                          Glyph="&#xE945;" 
                          FontSize="22"
                          Foreground="Gray"
                          Margin="8,0,0,0">
                </FontIcon>
                <ToolTipService.ToolTip>
                    <ToolTip x:Name="SoloIndicatorToolTip" Content="SOLO mode is OFF"/>
                </ToolTipService.ToolTip>
            </StackPanel>
        </Grid>
        <!-- StatusBar -->
        <TextBlock x:Name="StatusBar"
                   Grid.Row="1"
                   Margin="24,0,24,6"
                   Foreground="Green"
                   Visibility="Collapsed"
                   TextWrapping="WrapWholeWords"
                   FontSize="14"/>
        <!-- Debug Information -->
        <!--Border Grid.Row="1" 
                Background="#F0F0F0" 
                Padding="12"
                Margin="12,0,12,12"
                VerticalAlignment="Top">
            <TextBlock x:Name="DebugInfoText" 
                       Foreground="Red"
                       TextWrapping="Wrap"
                       Text="Debug info will appear here"/>
        </Border-->

        <!-- Chat Messages -->
        <Grid Grid.Row="2" Background="#FFE8E8E8">
            <ListView x:Name="MessagesListView" 
                     Background="#FFE0E0E0"
                     Padding="12,8" 
                     SelectionMode="None"
                     ItemsSource="{x:Bind Messages}"
                     ItemClick="Message_ItemClick"
                     IsItemClickEnabled="True"
                     HorizontalContentAlignment="Stretch">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Padding" Value="0,8"/>
                        <Setter Property="MinHeight" Value="0"/>
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:ChatMessage">
                        <Border Background="{Binding IsUserMessage, Converter={StaticResource BoolToBrushConverter}}" 
                                Padding="12"
                                Margin="0,4">
                            <StackPanel>
                                <TextBlock Text="{x:Bind Content}" 
                                           Foreground="{Binding IsUserMessage, Converter={StaticResource BoolToForegroundConverter}}"
                                           TextWrapping="Wrap"/>
                                <TextBlock Text="{x:Bind FormattedTime}" 
                                           Foreground="Gray"
                                           FontSize="10"
                                           HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>

        <!-- Input Area -->
        <Grid Grid.Row="3" Padding="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="MessageTextBox" 
                     Grid.Column="0"
                     PlaceholderText="Type your message..."
                     KeyDown="MessageTextBox_KeyDown"/>

            <Button x:Name="SendButton" 
                    Grid.Column="1" 
                    Content="Send" 
                    Margin="8,0,0,0"
                    Click="SendButton_Click"/>
        </Grid>

        <!-- Loading Indicator -->
        <Grid x:Name="LoadingIndicator" 
              Grid.Row="0"
              Grid.RowSpan="4"
              Background="#80000000"
              Visibility="Collapsed"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              Padding="24">
            <ProgressRing IsActive="True" 
                         Width="40" 
                         Height="40"
                         Foreground="White"/>
        </Grid>

    </Grid>
    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="List" Label="Task List" Click="TaskListButton_Click" />
            <AppBarButton Icon="Setting" Label="Settings" Click="SettingsButton_Click" />
        </CommandBar>
    </Page.BottomAppBar>
</Page>
